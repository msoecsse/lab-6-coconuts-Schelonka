<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" onKeyPressed="#onKeyPressed" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.141" fx:controller="coconuts.GameController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <VBox fx:id="skyAndSand" prefHeight="600.0" prefWidth="600.0">
            <children>
                <!-- Scoreboard -->
                <HBox fx:id="scoreboard" prefHeight="50.0" prefWidth="600.0"
                      style="-fx-background-color: linear-gradient(to right, derive(blue, 20%), derive(blue, -20%)); -fx-alignment: center; -fx-spacing: 50;">
                    <children>
                        <Label fx:id="timeLabel" text="Time: 0.0s" textFill="white">
                            <font>
                                <Font name="Arial Bold" size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="coconutsDestroyedLabel" text="Coconuts Destroyed: 0" textFill="white">
                            <font>
                                <Font name="Arial Bold" size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="coconutsHitBeachLabel" text="Coconuts Hit Beach: 0" textFill="white">
                            <font>
                                <Font name="Arial Bold" size="16.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Pane id="theGame" fx:id="gamePane" prefHeight="500.0" prefWidth="600.0"
                      style="-fx-background-color: linear-gradient(to bottom right, derive(skyblue, 20%), derive(skyblue, -40%));">
                    <children>
                        <Label layoutX="50.0" layoutY="500.0" scaleZ="2.0" text="Press arrow keys to move coconut"
                               textFill="darkred" translateZ="1.0">
                            <font>
                                <Font name="Poor Richard" size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
                <Pane id="theBeach" fx:id="theBeach" prefHeight="50.0" prefWidth="600.0"
                      style="-fx-background-color: linear-gradient(to bottom right, derive(tan, 30%), derive(tan, -50%));">
                </Pane>
            </children>
        </VBox>
    </children>
</GridPane>